<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/title_me"
        android:text="@string/title_me"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:textSize="40sp"
        android:textColor="@android:color/background_light" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:id="@+id/txt_me_week_num"
        android:background="@color/colorPrimary"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:textColor="@android:color/background_light" />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_height="0dp">

        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="100dp"
            android:id="@+id/btn_guide"
            android:text="@string/btn_motherguide"
            android:layout_marginRight="100dp"
            android:drawableTop="@drawable/guide"
            android:paddingTop="10dp" />

        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="100dp"
            android:text="@string/btn_motherweight"
            android:drawableTop="@drawable/weightt"
            android:paddingTop="10dp"
            android:id="@+id/btn_weight"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_weight="1"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_height="0dp">

        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="100dp"
            android:id="@+id/btn_hints"
            android:text="@string/btn_mothertips"
            android:layout_marginRight="100dp"
            android:drawableTop="@drawable/hint"
            android:paddingTop="10dp"/>

        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="100dp"
            android:text="@string/btn_motherchanges"
            android:drawableTop="@drawable/mother"
            android:paddingTop="10dp"
            android:id="@+id/btn_changes"/>

    </LinearLayout>



</LinearLayout>