
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.myapp.madroid.babycare.NationalNamesActivity">

    <TextView
        android:id="@+id/title_nation_names"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:text="@string/title_nation_names"
        android:textColor="@android:color/white"
        android:textSize="40sp" />


    -

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">


        -

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <Button
                android:id="@+id/btn_american_names"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:background="@drawable/america"
                android:textColor="@android:color/background_light" />

        </LinearLayout>


        -

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <Button
                android:id="@+id/btn_arabic_names"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:background="@drawable/ara" />

        </LinearLayout>


        -

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <Button
                android:id="@+id/btn_british_names"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:background="@drawable/britain" />

        </LinearLayout>

    </LinearLayout>


    -

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">


        -

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <Button
                android:id="@+id/btn_canadian_names"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:background="@drawable/canada" />

        </LinearLayout>


        -

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <Button
                android:id="@+id/btn_french_names"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:background="@drawable/france" />

        </LinearLayout>


        -

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <Button
                android:id="@+id/btn_german_names"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:background="@drawable/germany"
                android:paddingTop="60dp" />

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/next_level_button"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="@string/next_level" />

</LinearLayout>