<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center|top"
    android:orientation="vertical"
    tools:context="com.myapp.madroid.babycare.Main2Activity">
    -

    -

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">
        -

        -

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/txt_name"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/etxt_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?attr/colorButtonNormal"
                android:gravity="center"
                android:hint="@string/etxt_name"
                android:textColor="@android:color/black"
                android:textSize="22sp" />

        </LinearLayout>
        -

        -

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            -

            -

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:gravity="bottom|center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_hight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/txt_hight"
                    android:textColor="@color/colorPrimary"
                    android:textSize="16sp" />

                <Spinner
                    android:id="@+id/btn_hight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:drawable/btn_dropdown"
                    android:entries="@array/hight_arrays"
                    android:text="@string/etxt_hight"
                    android:textColor="@android:color/background_light"
                    android:textSize="20sp" />

            </LinearLayout>
            -

            -

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="7"
                android:gravity="bottom|center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_weight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/etxt_weight"
                    android:textColor="@color/colorPrimary"
                    android:textSize="16sp" />

                <Spinner
                    android:id="@+id/btn_weight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:autofillHints="@string/etxt_weight"
                    android:background="@android:drawable/btn_dropdown"
                    android:entries="@array/weight_arrays"
                    android:gravity="center"
                    android:text="@string/etxt_weight"
                    android:textColor="@android:color/background_light"
                    android:textSize="12sp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
    -

    -

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_enter_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:text="@string/txt_dueDate"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp" />
        -

        -

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/btn_preg_year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:background="@android:drawable/btn_dropdown"
                android:entries="@array/year_arrays"
                android:text="@string/txt_ddYear"
                android:textColor="@android:color/background_light"
                android:textSize="16sp" />

            <Spinner
                android:id="@+id/btn_preg_month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@android:drawable/btn_dropdown"
                android:entries="@array/month_arrays"
                android:text="@string/txt_ddMonth"
                android:textColor="@android:color/background_light"
                android:textSize="16sp" />

            <Spinner
                android:id="@+id/btn_preg_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:background="@android:drawable/btn_dropdown"
                android:entries="@array/day_arrays"
                android:minWidth="100dp"
                android:text="@string/txt_ddDay"
                android:textColor="@android:color/background_light"
                android:textSize="16sp" />

        </LinearLayout>

        <Button
            android:id="@+id/btn_Ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="@string/btn_ok"
            android:textColor="@android:color/black"
            android:textSize="16sp" />

    </LinearLayout>
    -

    -

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">
        -

        -

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <TextView
                android:id="@+id/txt_calc_bmi"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:textSize="12sp" />
            </ScrollView>

        </LinearLayout>

        <Button
            android:id="@+id/btn_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="@string/btn_continue"
            android:textSize="16sp" />

    </LinearLayout>

</LinearLayout>